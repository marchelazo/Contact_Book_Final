#Final Code 
import json
import requests
import time
from email_validator import validate_email, EmailNotValidError
import sys

def main():
    while(True):
        exit = False 
        contacts = {}

        urlget = requests.get('http://demo7130536.mockable.io/final-contacts-100')
        open('contacts.json', 'wb').write(urlget.content)
